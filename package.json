{
    "name": "ruby-test",
    "displayName": "ruby-test",
    "description": "Run ruby tests",
    "version": "0.0.1",
    "publisher": "azer",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.runTest"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [{
            "command": "extension.runTest",
            "title": "Ruby Test"
        }],
        "configuration":{
            "title": "Ruby Test configuration",
            "properties": {
                "rubyTest.testCommand": {
                    "type": "string",
                    "default": "m $FILE:$LINE",
                    "description": "Command to call to run test."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
